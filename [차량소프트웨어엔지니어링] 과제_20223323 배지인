#include <iostream>

int main() {
    int number;

    // 사용자로부터 정수를 입력받음
    std::cout << "정수를 입력하세요: ";
    std::cin >> number;

    // 짝수/홀수 판별
    if (number % 2 == 0) {
        std::cout << number << "는 짝수입니다." << std::endl;
    } else {
        std::cout << number << "는 홀수입니다." << std::endl;
    }

    return 0;
}
